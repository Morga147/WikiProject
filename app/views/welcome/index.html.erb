<h2>Placeholder for Daily Topic</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Published</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%=link_to post.title, post%></td>
        <td><%=link_to post.user.username, post.user%></td>
        <td><%=post.category.name%></td>
        <td><%=post.created_at.strftime('%x')%></td>
      </tr>
    <%end%>
  </tbody>
</table>
